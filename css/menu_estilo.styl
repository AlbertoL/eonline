@import 'nib/vendor'
@import 'nib/gradients'
@import "fonts.css"

vendor-prefixes = o webkit moz ms official
prepend(vendor-prefixes, ms, o)

blanco = #ffffff
gris_suave = #F3F3F3
negro = #000000

body 
	color blanco
	font-size 100%
	text-align center
	font-family Arial, Helvetica
	margin 0
	padding 0

.contenedor
	width 1366px

header
	background rgba(0, 0, 0, 0.8)
	height 100px
	position relative
	width 100%
	
	nav
		height 60px
		margin 0  auto
		padding-top 30px
		position relative
		width 80%
		
		.logo
			width 200px
			float left
			
			img
				width 200px
		
		ul 
			list-style none
			float right
			margin 5px 0
			padding 0
			
			li
				float left
				padding 0
				margin 0
		
				a 
					color blanco
					display block
					font-family din
					font-size 1.3em
					font-weight 400
					padding 10px
					text-decoration none
h2
	color negro

.login
	width 40%
	color negro
	font-family din
	padding-left 60px
	padding-top 40px
	text-align left
	display inline-block
	vertical-align top
	
	span
		font-size 2em
		
	.input_text
		display block
		width 200px
		margin-bottom 10px
		font-size 1.6em
	
	.boton
		background #45619D
		border solid 1px 
		font-size 1.6em
		width 90px
		margin 3px
		color blanco

.img
	display inline-block