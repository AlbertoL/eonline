blanco = #ffffff
rosadito = #E25454
rosado_clarito = #eb8989
blancof9 = #f9f9f9
blancof4 = #f4f4f4
naranjo_clarito = #F8D5A0
@import fonts
a
	text-decoration none
	color #ffffff

body
	background #ffffff
	color #333333
	font-family Arial, sans-serif
	font-size 16px
	.contenedor
		max-width 1400px
		width 100%

		header
			width 100%
			background #FFFFFF
			// position fixed

			nav
				height auto
				margin 0 auto
				padding 20px 0
				width 80%
			
				h1
					display inline-block
					font-family capsula
					margin 0px
					text-align center
					width 200px
				ul
					float right
					margin 0px 40px 0px 0px
					padding 0

					li
						float left
						height auto
						line-height: 30px;
						list-style: none
					
						a 
							display block
							color #4c4c4c
							font-family capsula
							font-size 1.2em
							font-weight bold
							padding 5px 10px
							&:hover
								border-radius 3px
								color #E25454

		.promo 
			background rosadito
			height 500px
			position relative
			width 100%

			.des
				border-radius 5px
				color blancof9
				padding 0 10px
				position absolute
				left 13%
				top 5%
				width 35%

				h1
					font-family capsula
					font-size 5em
					text-shadow 3px 3px 1px rgba(0, 0, 0, .9)
					margin-bottom 20px

				p 
					font-size 1.8em
					// vertical-align bottom
					color blanco

					span
						color naranjo_clarito

				.boton
					background rosadito
					border 3px solid blanco
					color blanco
					font-family sans-serif
					font-weight bold
					margin-bottom 10px
					padding 10px
					text-shadow 1px 0px 3px rgba(0,0,0,.9)
					width 150px
					&:hover
						transition-duration: 1s
						width 170px
			.dimg
				background blanco
				border 10px solid rosado_clarito
				border-radius 50%
				height auto
				padding-bottom 5%
				padding-top 5%
				position absolute
				right 13%
				text-align center
				top 10%
				width 30%
		.d_plataforma
			background #663D4E
			width 100%
			height 400px
			position relative