@import 'nib/vendor'
@import 'nib/gradients'
@import "fonts.css"

vendor-prefixes = o webkit moz ms official
prepend(vendor-prefixes, ms, o)

blanco = #ffffff
gris_suave = #F3F3F3
negro = #000000

body 
	color blanco
	font-size 100%
	text-align center
	font-family Arial, Helvetica
	margin 0
	padding 0

.contenedor
	background url(../img/bg/bg.jpg)
	background-position 0px -300px
	background-repeat no-repeat
	background-size 100% 40%
	max-width 1400px
	min-width 350px

header
	background rgba(0, 0, 0, 0.4)
	min-height 530px
	position relative
	width 100%
	
	nav
		height 60px
		margin 0  auto
		padding-top 30px
		position relative
		width 80%
		
		.logo
			width 200px
			float left
			
			img
				width 200px
		
		ul 
			list-style none
			float right
			margin 5px 0px
			padding 0
			
			li
				float left
				padding 0
				margin 0
		
				a 
					color blanco
					display block
					font-family din
					font-size 1.3em
					font-weight 400
					padding 10px
					text-decoration none
	
	.titulo
		width 90%
		margin 0 auto
		
		h1
			font-family din
			font-size 7.4em
			font-weight 100
			margin 80px 0px 0px 0px
		
		h2
			color #ff4545
			font-family din
			font-size 2.6em
			font-weight 100
			letter-spacing 2px
			margin-top 0px
		
		.boton
			border 3px solid #FF4545
			border-radius 3px
			-ms-border-radius 3px
			-o-border-radius 3px
			-moz-border-radius 3px
			margin 0 auto
			width 170px
			&hover
				border 3px solid green
			a
				background #FF4545
				color blanco
				display block
				font-family din
				font-size 1.7em
				font-weight 100
				margin 0 auto
				padding 10px 25px
				text-decoration none
				&:hover
					background rgba(0, 0, 0, .3)
					color blanco
.bienvenidos
	color #000000
	background blanco
	position relative
	height 250px
	padding-top 60px
	overflow hidden
	
	h2
		margin 0
		font-family din
		font-weight 600
		font-size 3em
	
	p 
		color #666666
		line-height 1.9
		font-size 1.3em
		margin 16px auto
		font-family sans-serif
		width 80%

.icon_descripcion
	background url('../img/banner-bg.jpg')
	background-size 100% 100%
	// background-position 0px -100px
	background-repeat no-repeat
	
	height 310px
	overflow hidden
	
	h2
		font-family din
		font-size 2.6em
		margin 10px 0px 0px 0px
	
	.icon_resena
		display inline-block
		margin 40px 15px
		text-align center
		width 180px
		
		h2
			font-size 2em
		
		img
			width 60%
			
.auspiciadores
	color negro
	height 350px
	overflow hidden
	
	h2
		font-family din
		font-size 3em
		font-weight 100
		text-transform capitalize
	
	.logo_cca
		display inline-block
		width 23%
		
		img
			width 100%
	
	.descripcion_cca
		display inline-block
		width 40%
		vertical-align top
		p 
			color negro

.des_promo
	background #F3F3F3
	color #333333
	padding 40px 0px 60px 0px

	.logo_promo
		display inline-block
		width 330px
		
		img
			width 100%
			margin-top 16px
	
	.p_promo
		display inline-block
		margin-right 16px
		text-align left
		vertical-align top
		width 500px
		
		h2
			font-family din
			font-size 2.3em
		
		p 
			font-family Arial, sans, sans-serif
			font-size 1.3em
			font-weight 100
			
		ul 
			list-style-image url(../img/icon/list/tick2.png)
			line-height 16px
			
			li
				font-family Arial, sans, sans-serif
				font-size 1.3em
				list-style-position inside
				padding 5px 0px
				vertical-align top

.inicia
	background #1D1D21
	height 180px
	overflow hidden
	&:hover
		background #FF4545
		transition 1.3s
	
	h2
		font-size 4.2em
		font-family din
		// vertical-align top
		a 
			color #ffffff
			text-decoration none
		img
			bottom 0
			vertical-align top
			width 70px
.pie
	max-height 400px
	background #232228
	overflow hidden
	font-family din
	font-weight 100
	font-size 1.6em
	text-align left
	.pie_seccion
		display inline-block
		margin-left 5px
		padding-left 60px
		width 40%
		vertical-align top
		h3
			font-size 1.5em
			padding-left 15px
		ul li
			font-family sans, sans-serif
			font-size 0.7em
		img
			width 100%
			display block
			margin 0 auto
			padding-top 40px
			max-width 400px

		h2
			font-size 1.3em
			text-align center

@media screen and (max-width: 1257px)

	body
		.contenedor
			background-size 130% 49%
			header
				min-height 430px
				nav
				.titulo
					width 100%
					h1
						font-size 4.3em
						margin 50px 0px 3px 0px
					h2
						font-size 1.7em
			.bienvenidos
				padding-top 16px
				max-height 200px
				h2
					font-size 2.2em
				p
					font-size 1.3em
					width 90%
					margin-top 5px
			.icon_descripcion
				.icon_resena
					width 120px
					padding-top 10px
					h2
						font-size 1.6em
					img
						width 95%
			.auspiciadores
				max-height 300px
				h2
					margin-top 10px
					font-size 2.2em
				.logo_cca
					width 38%
				.descripcion_cca
					width 50%
					font-size 1em
			.des_promo
				padding 0
				.p_promo
					width 50%
					h2
						font-size 1.7em
					p 
						font-size 1em
					ul li
						font-size 1em
				.logo_promo
					width 35%
					max-width 250px
					img
						width 100%
			.inicia
				min-height 70px
				max-height 120px
				h2
					font-size 2.8em
					a img
						width 7%
						max-width 50px
			.pie
				max-height 200px
				.pie_seccion
					display inline-block
					margin-left 10px
					padding-left 0px
					width 47%
					vertical-align top
					h3
						font-size 1em
						padding-left 15px
					ul li
						font-family sans, sans-serif
						font-size 0.6em
					img
						width 90%
						display block
						margin 0 auto
						max-width 300px

					h2
						font-size 1em
						text-align center
					
@media screen and (max-width: 660px)
	
	body
		.contenedor
			header
				min-height 400px
				nav
					width 100%
					.logo
						width 170px
						img
							width 170px
					ul
						margin 0
				.titulo
					h1
						font-size 3.3em
					h2
						font-size 1.3em
					.boton
						width 33%
						a
							font-size 1.2em
							padding 4% 2%
			
			.bienvenidos
				min-height 150px
				max-height 200px
				h2
					font-size 1.8em
				p 
					font-size 1.2em
					font-weight 100
					width 98%
			.icon_descripcion
				.icon_resena
					padding 20px 0px
					width 85px
					h2
						font-size 1.1em
					img
						width 80%
			.auspiciadores
				min-height 350px
				h2
					margin-top 10px
					font-size 2.2em
				.logo_cca
					width 70%
					display block
					margin 0 auto
				.descripcion_cca
					width 98%
			.des_promo
				padding 0
				.p_promo
					width 90%
					h2
						font-size 1.7em
					p 
						font-size 1em
					ul li
						font-size 1em
				.logo_promo
					width 30%
					img
						margin-top 0px
			.inicia
				min-height 50px
				max-height 100px
				h2
					font-size 2.3em
					a img
						width 7%
			.pie
				max-height 320px
				.pie_seccion
					display block
					margin-left 0
					padding-left 0px
					width 90%

					img
						width 40%
						display block
						margin 0 auto

@media screen and (max-width: 510px)
	
	body
		color #ffffff
		.contenedor
			background-size 180% 39%
			
			header
				min-height 320px
				nav
					width 100%
					.logo
						width 100%
					
					ul
						float none
						margin 0
						
						li
							width 24%
												
				.titulo 
					font-size Arial
					
					h1
						font-size 1.9em
						margin 60px 0px 5px 0px
					
					h2
						font-size 1.1em
						
					.boton
						width 40%
						a
							font-size 1.2em
			.bienvenidos
				min-height 150px
				max-height 180px
				h2
					font-size 1.6em
				p 
					font-size 16px
			.icon_descripcion
				height 400px
				h2
					font-size 1.8em
				.icon_resena
					margin 0px 35px
					width 100px
					padding 20px 0px
					h2
						font-size 1.2em
					img
						width 80%
			.auspiciadores
				min-height 400px
			
			.inicia
				min-height 50px
				max-height 80px
				h2
					font-size 1.7em						