@import 'nib/vendor'
@import 'nib/gradients'
@import "fonts.css"

vendor-prefixes = o webkit moz ms official
prepend(vendor-prefixes, ms, o)
blanco = #ffffff
gris_suave = #F3F3F3
negro = #000000
gris_clarito = #cccccc
gris_letra = #666666


body 
	color gris_letra
	background #f9f9f9
	font-size 100%
	text-align center
	font-family Arial, Helvetica
	margin 0
	padding 0
#cerrar
	color blue
.contenedor
	max-width 1400px
	min-width 350px
header
	background rgba(0, 0, 0, 0.8)
	height 100px
	position relative
	width 100%
	nav
		height 60px
		margin 0  auto
		padding-top 30px
		position relative
		width 80%
		.logo
			width 200px
			float left
			img
				width 200px
		ul 
			list-style none
			float right
			margin 5px 0
			padding 0
			
			li
				float left
				padding 0
				margin 0
		
				a 
					color blanco
					display block
					font-family din
					font-size 1.3em
					font-weight 400
					padding 10px
					text-decoration none

.mantenedores
	background blanco
	border 1px solid gris_clarito
	border-radius 4px
	margin 0 auto
	max-width 60%
	padding 3px
	.secciones
		border 3px solid gris_clarito
		border-radius 3px
		display inline-block
		margin-top 5px
		max-width 45%
		min-height 230px
		min-width 40%
		padding 5px 0px
		vertical-align top
.form
	background blanco
	border 1 solid gris_clarito
	border-radius 3px
	margin 0px auto 20px auto
	max-width 50%
	min-height 200px
	position relative
	
	.left
		text-align left
		font-size 1.2em
		padding 2px 0px 5px 5px
	
	&.scroll
		overflow-x scroll
	
	h3
		font-size 2em
	
	table
		border solid 1px gris_clarito
		margin 3px auto
		text-align left
		width 100%
		thead
			color blanco
			background #EA6153
			th 
				padding 5px 0px 5px 5px
		tbody
			td 
				padding 5px 0px 5px 5px
	.datos
		margin 0 auto
		padding 10px
		width 60%
		.institucion
			font-size 1.3em
			width 100%
		p 
			font-size 1.6em
			margin 10px 0px
			text-align left
			vertical-align top
		input
			border 1px solid gris_clarito
			border-radius 3px
			display block
			font-size 1.3em
			margin-top 0px
			padding 5px
			text-align left
			vertical-align top
			width 100%
		textarea
			border 1px solid gris_clarito
			border-radius 3px
			display block
			width 100%
		
		select
			border 1px solid gris_clarito
			display block
			font-size 1.3em
			width 100%
		.boton
			background #00AEEF
			border 0px
			color blanco
			display inline-block
			font-size 1.4em
			margin 30px 10px 10px 10px
			padding 3px
			text-align center
			width 25%
			&:hover
				background #19C0FF
		.cancelar
			background #00AEEF
			border 0px
			border-radius 3px
			color blanco
			display inline-block
			font-size 1.4em
			margin 30px 10px 10px 10px
			padding 3px
			text-decoration none
			width 25%
			&:hover
				background #19C0FF

@media screen and (max-width: 1280px)

	body
		color gris_letra
	.form
		max-width 55%
@media screen and (max-width: 1024px)
	
	body
		color gris_letra
	.form
		max-width 70%
		.datos
			width 80%
@media screen and (max-width: 800px)
	body
		color gris_letra
	header
		nav
			width 95%
	.form
		max-width 80%

@media screen and (max-width: 640px)

	body
		color gris_letra
	.form
		max-width 95%
		.datos
			width 90%
			h3
				font-size 1.4em
			p 
				font-size 1.2em
			.boton
				font-size 1.2em
			.cancelar
				font-size 1.2em

@media screen and (max-width: 640px)
	
	body
		header
			height 150px
			nav
				.logo
					width 100%
					float none
				
				ul 
					float none
					li
						width 24%
		.mantenedores
			max-width 97%
			.secciones
				min-width 45%
				// max-width 48%