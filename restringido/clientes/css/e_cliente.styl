@import 'nib/vendor'
@import 'nib/gradients'
@import "fonts.css"

vendor-prefixes = o webkit moz ms official
prepend(vendor-prefixes, ms, o)
blanco = #ffffff
gris_suave = #F3F3F3
negro = #000000
gris_clarito = #cccccc


body 
	color negro
	background #f4f4f4
	font-size 100%
	text-align center
	font-family Arial, Helvetica
	margin 0
	padding 0
#cerrar
	color blue
	
.contenedor
	max-width 1400px

header
	background rgba(0, 0, 0, 0.8)
	height 100px
	position relative
	width 100%
	
	nav
		height 60px
		margin 0  auto
		padding-top 30px
		position relative
		width 80%
		
		.logo
			width 200px
			float left
			
			img
				width 200px
		
		ul 
			list-style none
			float right
			margin 5px 0
			padding 0
			
			li
				float left
				padding 0
				margin 0
		
				a 
					color blanco
					display block
					font-family din
					font-size 1.3em
					font-weight 400
					padding 10px
					text-decoration none

.mantenedores
	background blanco
	border 1px solid gris_clarito
	border-radius 4px
	margin 0 auto
	max-width 60%
	padding 3px
	.secciones
		border 3px solid gris_clarito
		border-radius 3px
		display inline-block
		margin-top 5px
		max-width 45%
		min-height 200px
		min-width 40%
		padding 5px 0px
		vertical-align top
.form
	background blanco
	max-width 50%
	margin 0px auto 20px auto
	position relative
	border 1 solid gris_clarito
	border-radius 3px
	h3
		font-size 2em
	.datos
		padding 10px
		width 60%
		margin 0 auto
		p 
			vertical-align top
			font-size 1.6em
			margin 10px 0px
			text-align left
		.nombre
			vertical-align top
			display block
			margin-top 0px
			text-align left
			width 100%
			font-size 1.3em
			padding 5px
			border 1px solid gris_clarito
			border-radius 3px
		textarea
			display block
			width 100%
			border 1px solid gris_clarito
			border-radius 3px
			margin-bottom 20px
		.boton
			margin 10px
			font-size 1.4em
			background #00AEEF
			border 0px
			padding 3px
			width 25%
			color blanco
		.cancelar
			color negro
			background #00AEEF
			border 0px
			display inline-block
			font-size 1.4em
			padding 3px
			width 25%
			color blanco
			text-decoration none